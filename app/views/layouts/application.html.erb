        <li><%= link_to "Beer List" %></li>
        <li><%= link_to "Photos", "#photoModal", :data => {:toggle => "modal"} %></li>
        <li><%= link_to "DJ Info" %></li>
      </ul>
    </div> 
  </div> 
</div> 

