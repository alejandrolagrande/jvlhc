        <li><%= image_tag "jv_02_f.jpg", size: "48" %></li>
        <li><%= link_to "Jimmy Valentine's", '#'%></li>
     </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Calendar" %></li>
        <li><%= link_to "Beer List" %></li>
        <li><%= link_to "Contact Us" %></li>
        <li><%= link_to "DJ Info" %></li>
      </ul>
    </div> <!-- end div class="collapse navbar-collapse" -->
  </div> <!-- end div class="container" -->
</div> <!-- end div class="navbar navbar-default navbar-fixed-top" -->

<%= yield %>

</body>
</html>
